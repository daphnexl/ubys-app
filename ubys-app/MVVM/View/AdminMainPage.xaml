<UserControl x:Class="ubys_app.MVVM.View.AdminMainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ubys_app.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="1080"
             d:DesignWidth="1920">

    <UserControl.Resources>
        <Style TargetType="ColumnDefinition"
               x:Key="SidebarColumnStyle">
            <Setter Property="Width"
                    Value="400" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Width"
                            Value="50" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- TextBlock style for menu items -->
        <Style x:Key="SidebarTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="40" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Margin"
                    Value="10,0" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Visibility"
                    Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn"
                              Style="{StaticResource SidebarColumnStyle}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="White"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Margin="10,0,1510,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Hamburger Toggle Button (Bigger, Positioned on Right) -->
            <Button Width="80"
                    Height="80"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Hamburger_Click"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                <Canvas Width="40"
                        Height="40">
                    <Rectangle Width="40"
                               Height="4"
                               Fill="Black"
                               Canvas.Top="0" />
                    <Rectangle Width="40"
                               Height="4"
                               Fill="Black"
                               Canvas.Top="12" />
                    <Rectangle Width="40"
                               Height="4"
                               Fill="Black"
                               Canvas.Top="24" />
                </Canvas>
            </Button>

            <!-- Menu Section -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Menu Items -->
                    <RowDefinition Height="Auto" />
                    <!-- Exit -->
                </Grid.RowDefinitions>

                <!-- Menu Items -->
                <StackPanel Grid.Row="0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal"
                                Margin="20"
                                Height="108">
                        <Image Width="32"
                               Height="32"
                               Source="/Assets/home.png" />
                        <TextBlock Text="Home"
                                   Style="{StaticResource SidebarTextStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="20"
                                Height="108">
                        <Image Width="32"
                               Height="32"
                               Source="/Assets/courses.png" />
                        <TextBlock Text="Add Course"
                                   Style="{StaticResource SidebarTextStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="20"
                                Height="108">
                        <Image Width="32"
                               Height="32"
                               Source="/Assets/edit.png" />
                        <TextBlock Text="Add Teacher"
                                   Style="{StaticResource SidebarTextStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="20"
                                Height="108">
                        <Image Width="32"
                               Height="32"
                               Source="/Assets/students.png" />
                        <TextBlock Text="Add Student"
                                   Style="{StaticResource SidebarTextStyle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="20"
                                Width="300"
                                Height="Auto">
                        <Image Width="32"
                               Height="32"
                               Source="/Assets/logout.png" />
                        <TextBlock Text="Course Selection Status"
                                   Style="{StaticResource SidebarTextStyle}"
                                   TextWrapping="Wrap"
                                   Width="255" />
                    </StackPanel>
                </StackPanel>

                <!-- Exit Menu Item -->
                <StackPanel Orientation="Horizontal"
                            Margin="20,792,20,0"
                            Height="198"
                            VerticalAlignment="Top"
                            Grid.RowSpan="2">
                    <Image Width="32"
                           Height="32"
                           Source="/Assets/exit.png" />
                    <TextBlock Text="Log out"
                               Style="{StaticResource SidebarTextStyle}" />
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1"
              Background="#321C63" />
    </Grid>
</UserControl>
