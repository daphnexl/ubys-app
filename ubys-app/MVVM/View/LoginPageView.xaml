<UserControl x:Class="ubys_app.MVVM.View.LoginPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helper="clr-namespace:ubys_app.Helpers"
             xmlns:converters="clr-namespace:ubys_app.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#2C0A57">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!-- Background Circles (Optional Decorative Elements) -->
        <Ellipse Fill="#40145D"
                 Width="245"
                 Height="245"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="158"
                 Height="159"
                 Margin="139,172,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="205"
                 Height="205"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="300"
                 Height="300"
                 Margin="0,0,10,0"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="200"
                 Height="200"
                 Margin="0,250,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="96"
                 Height="98"
                 Margin="465,352,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />

        <!-- Title -->
        <TextBlock Text="UNIVERSITY INFORMATION MANAGEMENT SYSTEM"
                   FontSize="20"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,37,0,0"
                   FontWeight="Bold"
                   TextAlignment="Center" />

        <!-- Profile Placeholder -->
        <Border Width="90"
                Height="90"
                Background="LightGray"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,108,0,0" />

        <!-- Login Panel -->
        <StackPanel Width="290"
                    VerticalAlignment="Top"
                    Margin="0,219,0,0"
                    HorizontalAlignment="Center">

            <!-- Username Field -->
            <Grid>
                <TextBox x:Name="UserNameTextBox"
                         Width="226"
                         Height="35"
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label IsHitTestVisible="False"
                       Foreground="Gray"
                       Width="226"
                       Height="35"
                       Content="Username"
                       VerticalContentAlignment="Center">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=UserNameTextBox}"
                                             Value="">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </Grid>

            <!-- Password Field -->
            <StackPanel Margin="0 20 0 0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Grid>
                    <!-- Visible Password -->
                    <TextBox x:Name="VisiblePasswordBox"
                             Style="{StaticResource TextBoxStyle}"
                             Width="226"
                             Height="35"
                             Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding IsTextBoxVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />


                    <Label IsHitTestVisible="False"
                           Foreground="Gray"
                           Width="226"
                           Height="35"
                           Content="Password"
                           VerticalContentAlignment="Center">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=VisiblePasswordBox}"
                                                 Value="">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Grid>

                <!-- Toggle Show/Hide Password -->
                <ToggleButton Content="👁"
                              Width="30"
                              Height="30"
                              Style="{StaticResource ToggleButtonStyle}"
                              Margin="10 0 0 0"
                              IsChecked="{Binding IsTextBoxVisible, Mode=TwoWay}"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center" />
            </StackPanel>

            <!-- Login Button -->
            <Button Style="{StaticResource MainButton}"
                    Command="{Binding LoginCommand}"
                    HorizontalAlignment="Center"
                    Margin="0 20 0 0"
                    Content="Login"
                    Height="30"
                    Width="226" />

            <!-- Forgot Password -->
            <TextBlock Text="Forgot your password?"
                       Foreground="White"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       Margin="0,10,0,0"
                       Cursor="Hand" />
        </StackPanel>
    </Grid>
</UserControl>
