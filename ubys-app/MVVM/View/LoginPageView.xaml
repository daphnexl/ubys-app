<UserControl x:Class="ubys_app.MVVM.View.LoginPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ubys_app.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#2C0A57">
    <Grid>
        <!-- Background Circles (Optional Decorative Elements) -->
        <Ellipse Fill="#40145D"
                 Width="245"
                 Height="245"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="158"
                 Height="159"
                 Margin="139,172,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="205"
                 Height="205"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="300"
                 Height="300"
                 Margin="0,0,10,0"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="200"
                 Height="200"
                 Margin="0,250,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="96"
                 Height="98"
                 Margin="465,352,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />

        <!-- Title -->
        <TextBlock Text="UNIVERSITY INFORMATION MANAGEMENT SYSTEM"
                   FontSize="20"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,37,0,0"
                   FontWeight="Bold"
                   TextAlignment="Center" />

        <!-- Profile Placeholder -->
        <Border Width="90"
                Height="90"
                Background="LightGray"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,108,0,0" />

        <!-- Username TextBox -->
        <Border CornerRadius="17"
                Padding="5"
                Background="#D9D9D9"
                BorderBrush="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,219,0,0"
                Height="35"
                Width="226">
            <TextBox x:Name="UsernameTextBox"
                     Text="username"
                     Foreground="Gray"
                     FontSize="14"
                     FontFamily="Segoe UI"
                     BorderBrush="Transparent"
                     Background="Transparent"
                     Padding="10"/>
        </Border>

        <!-- PasswordBox -->
        <Border CornerRadius="17"
                Padding="5"
                Background="#D9D9D9"
                BorderBrush="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,265,0,0"
                Height="35"
                Width="226">
            <Grid>
                <PasswordBox x:Name="PasswordBox"
                             Width="219"
                             Height="26"
                             FontSize="14"
                             FontFamily="Segoe UI"
                             BorderBrush="Transparent"
                             Background="Transparent"
                             Padding="10"/>
                <TextBlock x:Name="PasswordPlaceholder"
                           Text="●●●●●●"
                           FontSize="14"
                           Foreground="Gray"
                           VerticalAlignment="Top"
                           Margin="12,0,0,0"
                           IsHitTestVisible="False"
                           Visibility="Visible" />
            </Grid>
        </Border>

        <!-- Forgot Password -->
        <TextBlock Text="Forgot your password?"
                   Foreground="White"
                   FontSize="12"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="404,315,0,0"
                   Cursor="Hand" />

    </Grid>
</UserControl>
