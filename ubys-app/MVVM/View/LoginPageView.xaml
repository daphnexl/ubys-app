<UserControl x:Class="ubys_app.MVVM.View.LoginPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ubys_app.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="1080"
             d:DesignWidth="1920"
             Background="#2C0A57">
    <Grid>
        <!-- Background Circles (Optional Decorative Elements) -->
        <Ellipse Fill="#40145D"
                 Width="486"
                 Height="486"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="338"
                 Height="340"
                 Margin="414,299,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="639"
                 Height="639"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="456"
                 Height="456"
                 Margin="0,0,10,116"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="558"
                 Height="558"
                 Margin="10,522,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="291"
                 Height="297"
                 Margin="606,930,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />

        <!-- Title -->
        <TextBlock Text="UNIVERSITY INFORMATION MANAGEMENT SYSTEM"
                   FontSize="50"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,89,0,0"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Width="1382" />

        <!-- Profile Placeholder -->
        <Border Width="226"
                Height="165"
                Background="LightGray"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,323,0,0" />

        <!-- Username TextBox -->
        <Border CornerRadius="17"
                Padding="5"
                Background="#D9D9D9"
                BorderBrush="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,576,0,0"
                Height="63"
                Width="380">
            <TextBox x:Name="UsernameTextBox"
                     Text="username"
                     Foreground="Gray"
                     FontSize="22"
                     FontFamily="Segoe UI"
                     BorderBrush="Transparent"
                     Background="Transparent"
                     Padding="10"
                     GotFocus="UsernameTextBox_GotFocus"
                     LostFocus="UsernameTextBox_LostFocus"
                     Margin="5,-5,-5,5" />
        </Border>

        <!-- PasswordBox -->
        <Border CornerRadius="17"
                Padding="5"
                Background="#D9D9D9"
                BorderBrush="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,655,0,0"
                Height="63"
                Width="380">
            <Grid Margin="0,-5,0,0">
                <PasswordBox x:Name="PasswordBox"
                             Width="219"
                             Height="26"
                             FontSize="14"
                             FontFamily="Segoe UI"
                             BorderBrush="Transparent"
                             Background="Transparent"
                             Padding="10"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             GotFocus="PasswordBox_GotFocus"
                             LostFocus="PasswordBox_LostFocus" />
                <TextBlock x:Name="PasswordPlaceholder"
                           Text="●●●●●●"
                           FontSize="22"
                           Foreground="Gray"
                           VerticalAlignment="Top"
                           Margin="12,13,0,0"
                           IsHitTestVisible="False"
                           Visibility="Visible" />
            </Grid>
        </Border>

        <!-- Forgot Password -->
        <TextBlock Text="Forgot your password?"
                   Foreground="White"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="948,723,0,0"
                   Cursor="Hand" />

    </Grid>
</UserControl>
