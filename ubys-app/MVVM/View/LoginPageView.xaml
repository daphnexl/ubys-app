<UserControl x:Class="ubys_app.MVVM.View.LoginPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helper="clr-namespace:ubys_app.Helpers"
             xmlns:converters="clr-namespace:ubys_app.Converters"
             mc:Ignorable="d"
             d:DesignHeight="1080"
             d:DesignWidth="1920"
             Background="#2C0A57">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!-- Background Circles (Optional Decorative Elements) -->
        <Ellipse Fill="#40145D"
                 Width="610"
                 Height="610"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5"
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Fill="#40145D"
                 Width="398"
                 Height="401"
                 Margin="388,395,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="579"
                 Height="579"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Opacity="0.5"
                 Margin="0,340,10,0" />
        <Ellipse Fill="#40145D"
                 Width="520"
                 Height="520"
                 Margin="-5,560,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />
        <Ellipse Fill="#40145D"
                 Width="109"
                 Height="110"
                 Margin="465,340,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.5" />

        <!-- Title -->
        <TextBlock Text="UNIVERSITY INFORMATION MANAGEMENT SYSTEM"
                   FontSize="60"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,37,0,0"
                   FontWeight="Bold"
                   TextAlignment="Center" />

        <!-- Profile Placeholder -->
        <Border Width="230"
                Height="230"
                Background="LightGray"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,280,0,0" />

        <!-- Login Panel -->
        <StackPanel Width="348"
                    VerticalAlignment="Top"
                    Margin="0,204,0,0"
                    HorizontalAlignment="Center">

            <!-- Username Field -->
            <Grid>
                <TextBox x:Name="UserNameTextBox"
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="1,466,1,-473" />
                <Label IsHitTestVisible="False"
                       Foreground="Gray"
                       Width="226"
                       Height="35"
                       Content="Username"
                       VerticalContentAlignment="Center"
                       Margin="1,473,121,-473">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=UserNameTextBox}"
                                             Value="">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </Grid>

            <!-- Password Field -->
            <StackPanel Margin="0 20 0 0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Grid>
                    <!-- Visible Password -->
                    <TextBox x:Name="VisiblePasswordBox"
                             Style="{StaticResource TextBoxStyle}"
                             Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding IsTextBoxVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Margin="2,352,-122,-357" />


                    <Label IsHitTestVisible="False"
                           Foreground="Gray"
                           Width="226"
                           Height="35"
                           Content="Password"
                           VerticalContentAlignment="Center"
                           Margin="2,355,-2,-354">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=VisiblePasswordBox}"
                                                 Value="">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Grid>
                <ToggleButton Content="👁"
                              Width="30"
                              Height="30"
                              Style="{StaticResource ToggleButtonStyle}"
                              Margin="30 0 10 0"
                              IsChecked="{Binding IsTextBoxVisible, Mode=TwoWay}"
                              HorizontalAlignment="Right" />


                <!-- Toggle Show/Hide Password -->
            </StackPanel>

            <!-- Login Button -->
            <Button Style="{StaticResource MainButton}"
                    Command="{Binding LoginCommand}"
                    HorizontalAlignment="Center"
                    Margin="0 480 0 0"
                    Content="Login"
                    Height="50"
                    Width="342"
                    Click="Button_Click" />
            <TextBlock Height="95"
                       Width="206"
                       Text="Forgot your password?"
                       HorizontalAlignment="Right"
                       FontSize="20"
                       Foreground="White"
                       Cursor="Hand" />

            <!-- Forgot Password -->
        </StackPanel>
    </Grid>
</UserControl>
