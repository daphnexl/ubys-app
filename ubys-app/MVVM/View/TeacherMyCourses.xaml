<UserControl x:Class="ubys_app.MVVM.View.TeacherMyCourses"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ubys_app.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="1080"
             d:DesignWidth="1920"
             Background="#321C63">

    <Grid Margin="100"
          MaxWidth="1900"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <!-- Dikey ortalama eklendi -->
        <StackPanel VerticalAlignment="Center">
            <!-- Dikey ortalama eklendi -->

            <!-- Üst Filtre Alanı -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,50"
                        HorizontalAlignment="Center">
                <Button Content="☰"
                        Width="90"
                        Height="90"
                        Margin="0,0,30,0"
                        Background="White" />

                <ComboBox Width="400"
                          Height="80"
                          Margin="0,0,30,0"
                          FontSize="30">
                    <!-- Yazı büyütüldü -->
                    <ComboBoxItem Content="Courses Code"
                                  IsSelected="True"
                                  FontSize="30" />
                </ComboBox>

                <ComboBox Width="560"
                          Height="80"
                          Margin="0,0,30,0"
                          FontSize="30">
                    <!-- Yazı büyütüldü -->
                    <ComboBoxItem Content="Course Name"
                                  IsSelected="True"
                                  FontSize="30" />
                </ComboBox>

                <ComboBox Width="400"
                          Height="80"
                          FontSize="30">
                    <!-- Yazı büyütüldü -->
                    <ComboBoxItem Content="Courses Credits"
                                  IsSelected="True"
                                  FontSize="30" />
                </ComboBox>
            </StackPanel>

            <!-- Section Etiketi -->
            <Border Background="#402D73"
                    Padding="18,12"
                    CornerRadius="10"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Left">
                <TextBlock Text="Section 1"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="28" />
            </Border>

            <!-- Kurs Tablosu -->
            <Border Background="#402D73"
                    Padding="35"
                    CornerRadius="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Satır 1 -->
                    <TextBlock Text="1"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="18"
                               FontSize="24" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->

                    <!-- Satır 2 -->
                    <TextBlock Text="2"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Grid.Row="1"
                               Grid.Column="0"
                               Margin="18"
                               FontSize="24" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->
                    <TextBox Grid.Row="1"
                             Grid.Column="2"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->

                    <!-- Satır 3 -->
                    <TextBlock Text="3"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Grid.Row="2"
                               Grid.Column="0"
                               Margin="18"
                               FontSize="24" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->
                    <TextBox Grid.Row="2"
                             Grid.Column="2"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->

                    <!-- Satır 4 -->
                    <TextBlock Text="4"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Grid.Row="3"
                               Grid.Column="0"
                               Margin="18"
                               FontSize="24" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->
                    <TextBox Grid.Row="3"
                             Grid.Column="2"
                             Margin="18"
                             Background="#E0E0E0"
                             FontSize="24"
                             Height="70" />
                    <!-- Yükseklik artırıldı -->
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
