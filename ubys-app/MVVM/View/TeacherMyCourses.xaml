<UserControl x:Class="ubys_app.MVVM.View.TeacherMyCourses"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ubys_app.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="#2F0057"
          Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Üst Filtre Alanı -->
        <Grid Grid.Row="0"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      Margin="5"
                      SelectedIndex="0">
                <ComboBoxItem Content="Courses Code" />
            </ComboBox>

            <ComboBox Grid.Column="1"
                      Margin="5"
                      SelectedIndex="0">
                <ComboBoxItem Content="Course Name" />
            </ComboBox>

            <ComboBox Grid.Column="2"
                      Margin="5"
                      SelectedIndex="0">
                <ComboBoxItem Content="Courses Credits" />
            </ComboBox>
        </Grid>

        <!-- Ana İçerik -->
        <Border Grid.Row="1"
                Background="#3A3A3A"
                CornerRadius="4"
                Padding="10"
                Margin="10">
            <StackPanel>
                <!-- Section Butonu -->
                <Button Content="Section 1"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Padding="6,2"
                        Background="#5A5A5A"
                        Foreground="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Width="74" />

                <!-- 4 satır ve 3 sütun içeren Grid -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Satır 1 -->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="1"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="5" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Height="40"
                             Background="#DDDDDD" />
                    <TextBox Grid.Row="0"
                             Grid.Column="2"
                             Height="40"
                             Background="#DDDDDD" />

                    <!-- Satır 2 -->
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="2"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="5" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Height="40"
                             Background="#DDDDDD" />
                    <TextBox Grid.Row="1"
                             Grid.Column="2"
                             Height="40"
                             Background="#DDDDDD" />

                    <!-- Satır 3 -->
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="3"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="5" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Height="40"
                             Background="#DDDDDD" />
                    <TextBox Grid.Row="2"
                             Grid.Column="2"
                             Height="40"
                             Background="#DDDDDD" />

                    <!-- Satır 4 -->
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="4"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="5" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Height="40"
                             Background="#DDDDDD" />
                    <TextBox Grid.Row="3"
                             Grid.Column="2"
                             Height="40"
                             Background="#DDDDDD" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Height="40"
                             Background="#DDDDDD" />
                    <TextBox Grid.Row="0"
                             Height="40"
                             Background="#DDDDDD"
                             Grid.ColumnSpan="2"
                             Margin="19,0,246,0" />
                    <TextBox Grid.Row="1"
                             Height="40"
                             Background="#DDDDDD"
                             Grid.ColumnSpan="2"
                             Margin="19,0,246,0" />
                    <TextBox Grid.Row="2"
                             Height="40"
                             Background="#DDDDDD"
                             Grid.ColumnSpan="2"
                             Margin="19,0,246,0" />
                    <TextBox Grid.Row="3"
                             Height="40"
                             Background="#DDDDDD"
                             Grid.ColumnSpan="2"
                             Margin="19,0,246,0" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
