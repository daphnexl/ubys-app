<Window x:Class="ubys_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ubys_app.MVVM.Model"
        xmlns:views="clr-namespace:ubys_app.MVVM.View"
        xmlns:custom="clr-namespace:ubys_app.CustomControls"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        WindowState="Maximized"
        Height="1080"
        Width="1920"
        Background="#2C0A57">

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewmodels:LoginPageViewModel}">
                <views:LoginPageView />
            </DataTemplate>
        </Grid.Resources>


        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
