<UserControl x:Class="ubys_app.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ubys_app.Components"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:NavigationAdminBar Grid.ColumnSpan="2"
                             Visibility="{Binding IsNavigationBarVisible, Converter={StaticResource BooleanToVisibility}}"
                             DataContext="{Binding AdminNavigationBarVM}"
                             Panel.ZIndex="1" />
        <local:NavigationStudentBar Grid.ColumnSpan="2"
                                  Visibility="{Binding IsNavigationBarVisible, Converter={StaticResource BooleanToVisibility}}"
                                  DataContext="{Binding NavigationStudentBarViewModel}"
                                  Panel.ZIndex="1" />
        <local:NavigationTeacherBar Grid.ColumnSpan="2"
                                  Visibility="{Binding IsNavigationBarVisible, Converter={StaticResource BooleanToVisibility}}"
                                  DataContext="{Binding NavigationTeacherBarViewModel}"
                                  Panel.ZIndex="1" />


        <!-- Sol Navigasyon -->
        <ContentControl Grid.Column="0"
                        Content="{Binding NavigationBarViewModel}" />

        <!-- Sağ İçerik -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentPageViewModel}" />
    </Grid>
</UserControl>
